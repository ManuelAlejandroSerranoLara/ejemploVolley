<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUserData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/DarkSlateGray"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewDataID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Holder"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDataUsername"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textViewDataUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Holder"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDataNombre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataID"/>

            <TextView
                android:id="@+id/textViewDataNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Holder"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewDataApellido"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataUsername"/>

            <TextView
                android:id="@+id/textViewDataApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/Holder"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataNombre" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>